{#
/**
 * @file
 * Default theme implementation for the trust syndication page.
 *
 * Available variables:
 * - node: The node entity.
 * - metadata: Array of trust metadata.
 * - attributes: HTML attributes for the container.
 */
#}
<div{{ attributes.addClass('trust-syndication-page') }}>
  <div class="trust-syndication-preview">
    <h2>{{ 'Preview'|t }}</h2>
    <div class="trust-syndication">
      <trust-syndication
        node-id="{{ metadata.nodeId }}"
        trust-role="{{ metadata.trustRole }}"
        trust-scope="{{ metadata.trustScope }}"
        trust-contact="{{ metadata.trustContact }}"
        trust-topics="{{ metadata.trustTopics|json_encode }}"
        node-summary="{{ metadata.nodeSummary }}"
      ></trust-syndication>
    </div>
  </div>

  <div class="trust-syndication-form">
    <h2>{{ 'Trust Metadata'|t }}</h2>
    {{ drupal_form('Drupal\\ucb_trust_schema\\Form\\TrustSyndicationForm', node) }}
  </div>
</div> 