    'Facilities' => '',
    'Financial aid' => 'Grants, Scholarships',
    'Graduation' => '',
    'Health' => '',
    'Housing' => '',
    'Policy' => '',
    'Records' => '',
    'Recruitment' => '',
    'Registration' => '',
    'Research' => '',
    'Safety' => '',
    'Sports' => '',
    'Student organizations' => '',
    'Support services' => '',
    'Sustainability' => '',
    'Parking & transportation' => '',
    'Technology' => '',
  ];

  foreach ($topics as $name => $description) {
    $term = Term::create([
